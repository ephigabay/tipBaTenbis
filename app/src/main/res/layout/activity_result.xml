<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hex254.tipbatenbis.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textRestName"
        android:layout_gravity="center_horizontal"
        android:textColor="#040bc8"
        android:visibility="invisible"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textTip"
        android:layout_gravity="center_horizontal"
        android:textColor="#040bc8"
        android:visibility="invisible"
        android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:id="@+id/responseView"
        android:visibility="invisible"
        android:layout_weight="0.92"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/otherwiseMessage"
            android:textColor="#040bc8"
            android:layout_gravity="center_horizontal|center"
            />

        <LinearLayout
            android:layout_width="348dp"
            android:layout_height="71dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.00"
            android:clickable="true"
            android:visibility="visible">

            <Button
                android:id="@+id/response_accept"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_weight="0.5"
                android:text="@string/response_accept"
                android:visibility="visible" />

            <Button
                android:id="@+id/response_dont_accept"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="145dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:text="@string/response_dont_accept"
                android:visibility="visible" />

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notInLocation"
            android:id="@+id/notInLocationBTN"
            />
    </LinearLayout>

</RelativeLayout>
